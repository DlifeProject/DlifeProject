<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fmIg"
    android:background="@color/background_white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rlTop"
        android:background="@color/primary_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ï¼­ake a friend"
            android:textColor="@color/background_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvHeader" />

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:onClick="onBackClick"
            android:background="@color/primary_green"
            app:srcCompat="@drawable/ic_back" />
    </RelativeLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/background_white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivFriendPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/tired" />
                <TextView
                    android:id="@+id/tvFriendShareCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_button_background"
                    android:textColor="@color/background_white"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Friend"
                    android:textSize="24sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlMyshare"
                android:background="@color/primary_green_light"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivMyPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/no_photo" />
                <TextView
                    android:id="@+id/tvMyShareCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_button_background"
                    android:textColor="@color/background_white"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"

                    android:text="choose a category"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/iv_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/vector_left"
                    />
                <ImageButton
                    android:id="@+id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/vector_right"
                    />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSend"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/background_white"
            android:textSize="28sp"
            android:background="@drawable/image_button_background_dark"/>
    </FrameLayout>


</LinearLayout>