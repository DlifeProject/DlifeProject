<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="10dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/ry_circleclick"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/tv_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="PingFang TC"
                android:text="Daily"
                android:textColor="@color/background_white"
                android:textSize="35sp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout">

        <RelativeLayout
            android:id="@+id/ry_Since"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_theme"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:text="Since"
                android:textColor="@color/text_black"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/tv_start_time"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_year_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_year"
                android:text="/"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_year_month"

                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_month_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_month"
                android:text="/"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_month_day"

                android:textColor="@color/text_black"
                android:textSize="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ry_End"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_theme"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="55dp"
                android:text="End"
                android:textColor="@color/text_black"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_year_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/tv_end_time"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_year_month_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_year_end"
                android:text="/"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_month_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_year_month_end"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_month_day_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_month_end"
                android:text="/"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_day_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_month_day_end"
                android:textColor="@color/text_black"
                android:textSize="30dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ry_End"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_rectangle_dark"
            android:text="確認"
            android:textColor="@color/text_black" />



    </RelativeLayout>

</RelativeLayout>