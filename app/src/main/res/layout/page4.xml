<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_white"
    >

    <LinearLayout
        android:id="@+id/person_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/person_data" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_located"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="225dp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:src="@drawable/person_located" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="35dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/facebook" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="225dp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/google" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gps_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="35dp">

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/gps_list" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gps_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="225dp">

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/gps_upload" />
    </LinearLayout>
</RelativeLayout>