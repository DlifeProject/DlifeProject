<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/iv_pic"
            android:src="@drawable/no_photo"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="3.5">
        <LinearLayout
            android:id="@+id/iv_Category_previous"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal" />
        <RelativeLayout
            android:id="@+id/ry_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <TextView
                android:id="@+id/tv_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Shopping"
                android:textSize="35sp"
                android:layout_centerInParent="true"
                android:fontFamily="PingFang TC"
                android:textColor="@color/background_white"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/iv_Category_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我又敗家了，圍巾入手！"
            android:textColor="@color/text_black"
            android:textSize="30sp"
            android:layout_weight="1.2"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="2017"
                android:textColor="@color/text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_year_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_year"
                android:text="/"
                android:textColor="@color/text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_year_month"
                android:text="11"
                android:textColor="@color/text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_month_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_month"
                android:text="/"
                android:textColor="@color/text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_month_day"
                android:text="30"
                android:textColor="@color/text_black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.4"
            >

            <TextView
                android:id="@+id/three_day_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="3 days :"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_threedays"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/three_day_title"
                android:text="3"
                android:textColor="@color/text_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/three_day"
            android:layout_weight="1.4">

            <TextView
                android:id="@+id/seven_day_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="7 days :"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_sevendays"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/seven_day_title"
                android:text="6"
                android:textColor="@color/text_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4">
        </LinearLayout>


    </LinearLayout>

</LinearLayout>