<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#ffff">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/picture1" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="20XX/XX/XX"
        android:textAllCaps="false"
        android:textColor="@color/page2_viewpager"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/tvDate"
        android:layout_toRightOf="@+id/tvDate"
        android:src="@drawable/ic_sun"
        android:id="@+id/weather" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_diary" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_place" />

    <TextView
        android:id="@+id/tvTimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDate"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:text="XX:XX"
        android:textColor="@color/page2_viewpager"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvTimeStart"
        android:layout_alignRight="@+id/tvTimeStart"
        android:layout_below="@+id/tvTimeStart"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="|"
        android:textColor="@color/page2_viewpager"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/tvTimeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTimeStart"
        android:layout_alignStart="@+id/tvTimeStart"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="XX:XX"
        android:textColor="@color/page2_viewpager"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPlace"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="55dp"
        android:text="Place"
        android:textColor="@color/page2_viewpager"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDiary"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="110dp"
        android:text="diary"
        android:textColor="@color/page2_viewpager"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_new"
        android:id="@+id/icnew" />

</RelativeLayout>